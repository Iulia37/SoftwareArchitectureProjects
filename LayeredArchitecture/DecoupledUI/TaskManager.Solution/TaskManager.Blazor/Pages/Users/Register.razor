@page "/register"
@using Blazored.LocalStorage
@using TaskManager.DTO.Models
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject ILocalStorageService LocalStorage

<h3>Create a new account</h3>

@if (validationMessages?.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var e in validationMessages)
        {
            <div>@e</div>
        }
    </div>
}

<EditForm Model="registerUser" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Username:</label>
        <InputText @bind-Value="registerUser.Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Password:</label>
        <InputText @bind-Value="registerUser.Password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

@code {
    RegisterUserDTO registerUser = new RegisterUserDTO();
    List<string> validationMessages = new();

    async Task HandleValidSubmit()
    {
        validationMessages.Clear();
        try
        {
            await UserService.RegisterAsync(registerUser);

            var loginDto = new LoginUserDTO
                {
                    Username = registerUser.Username,
                    Password = registerUser.Password
                };

            var loggedInUser = await UserService.LoginAsync(loginDto);
            await LocalStorage.SetItemAsync("user", loggedInUser);
            NavigationManager.NavigateTo("/login");
        }
        catch (ApplicationException ex)
        {
            try
            {
                using var doc = System.Text.Json.JsonDocument.Parse(ex.Message);
                if (doc.RootElement.TryGetProperty("errors", out var errorsProp))
                {
                    foreach (var property in errorsProp.EnumerateObject())
                    {
                        foreach (var err in property.Value.EnumerateArray())
                        {
                            validationMessages.Add(err.GetString());
                        }
                    }
                }
                else
                {
                    validationMessages.Add(ex.Message);
                }
            }
            catch
            {
                validationMessages.Add(ex.Message);
            }
        }
    }
}
