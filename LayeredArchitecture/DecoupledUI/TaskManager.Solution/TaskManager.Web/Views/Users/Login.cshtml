@model TaskManager.Domain.Models.User

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" class="mt-3">
    <div class="form-group">
        <label for="username">Username</label>
        <input asp-for="Username" class="form-control" id="username" placeholder="Enter username" required autofocus />
    </div>
    <div class="form-group mt-3">
        <label for="password">Password</label>
        <input asp-for="Password" class="form-control" id="password" type="password" placeholder="Enter password" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary m-3">Login</button>
        <a asp-action="Register" class="btn btn-primary m-3">Register</a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
</form>